{% extends 'base.html.twig' %}

{% block title %}Toutes mes fiches - GSB
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.center {
			margin-top: 10px;
		}
		body,
		html {
			height: 100%;
		}
		.bg {
			/* The image used */
			background-image: url("images/backWhite.png");

			/* Full height */
			height: 100%;

			/* Center and scale the image nicely */
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
	</style>

	<div class="example-wrapper bg">
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<h1>Liste des fiches</h1>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-right">
				<a href="{{path('creation')}}" class="btn btn-dark {{etatBouton}}" role="button">Ajouter une fiche
					<i class="fas fa-plus-circle"></i>
				</a>
			</div>

		</div>
		<ul class="list-group mb-3 hover-blue">
			{% for uneFiche in listeFrais%}
				<li class="list-group-item align-items-end">
					<div class="row">
						<div class=" col-10 center">
							{{ uneFiche.date|date("F Y")}}
						</div>
						<div class="col-2" style="float:right;">
							{% if uneFiche.monEtat.id >= 3 %}
								<a href="{{ path('information', {'id': uneFiche.id}) }}" class="btn btn-primary btn-sm" style="float: right;" role="button">
									afficher
								</a>
							{% else %}
								<a href="{{ path('modifier', {'id': uneFiche.id}) }}" class="btn btn-success btn-sm" style="float: right;" role="button">
									editer
								</a>
							{% endif %}
						</div>

					</div>

				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
