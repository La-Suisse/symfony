{% extends 'base.html.twig' %}

{% block title %}Accueil - GSB
{% endblock %}

{% block body %}
	<style>
		body,
		html {
			height: 100%;
		}
		.bg {
			/* The image used */
			background-image: url("../images/background.jpg");

			/* Full height */
			height: 100%;

			/* Center and scale the image nicely */
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		.fin {
			backdrop-filter: blur(10px);
			-webkit-backdrop-filter: blur(10px);
			height: 100%;

		}
	</style>

	<div class="bg fin">
		<div class="col-md-12 mb-4 white-text text-center wow fadeIn fin">
			<h3 class="display-3 font-weight-bold black-text mb-0 pt-md-5 pt-5">GSB</h3>
			<hr class="hr my-4 w-75">
			<h4 class="subtext-header black-text mt-2 mb-4">Bienvenue sur notre site</h4>
		</div>

	</div>
{% endblock %}
